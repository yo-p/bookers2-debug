<div class="row">
  <div class="col-xs-3">
    <%= render 'users/profile', user: @user %>
    <!--同コントローラーのviewで表示ならusersは省略可 -->
    <%= render 'books/newform', book: @book, user: @user %>
  </div>
  <div class="col-xs-9">
    <h2>Books</h2>
      <!--books一覧 -->
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th>comments</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to (book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, size: "50x50", fallback: "no-image-mini.jpg" %>
              <% end %>
            </td>
            <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
            <td><%= book.body %></td>
            <td>コメント数:<%= @book.comments.count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <!--books一覧 -->
  </div>
</div>


